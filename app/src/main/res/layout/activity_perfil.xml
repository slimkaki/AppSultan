<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="1"
        android:rowCount="8">

        <TextView
            android:id="@+id/PerfilText"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:text="@string/perfilTitle"
            android:textSize="64sp"
            android:layout_rowWeight="0.01"
            />

        <ImageView
            android:id="@+id/ImagePerfil"
            android:layout_width="107dp"
            android:layout_height="115dp"
            android:layout_row="1"
            android:layout_rowWeight="0"
            android:layout_column="0"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/unkown"
            />

        <Button
            android:id="@+id/NameButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_gravity="center"
            android:text="@string/Perfil_namo"
            android:layout_rowWeight="0.01"
            android:width="200dp"
            />

        <Button
            android:id="@+id/EmailButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_gravity="center"
            android:text="@string/Perfil_e_mail"
            android:layout_rowWeight="0.01"
            android:width="200dp"
            />

        <Button
            android:id="@+id/AddressButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_gravity="center"
            android:text="@string/adress"
            android:layout_rowWeight="0.01"
            android:width="200dp"
            />

        <Button
            android:id="@+id/EditButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_gravity="center"
            android:text="@string/edit"
            android:layout_rowWeight="0.01"
            android:width="200dp"
            />

        <Button
            android:id="@+id/RequestsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_gravity="center"
            android:text="@string/requests"
            android:layout_rowWeight="0.01"
            android:width="200dp"
            />
        <Button
            android:id="@+id/LucroButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="7"
            android:layout_gravity="center"
            android:text="@string/lucro"
            android:layout_rowWeight="0.01"
            android:width="200dp"
            />
    </TableLayout>

</android.support.constraint.ConstraintLayout>