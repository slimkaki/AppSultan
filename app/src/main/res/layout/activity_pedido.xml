<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/sultanGrayColor">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/finalizar_pedido"
        android:textSize="42sp"
        tools:ignore="MissingConstraints" />
    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:columnCount="5"
        android:rowCount="2"
        android:columnOrderPreserved="true">
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:scaleType="fitXY"
        android:src="@drawable/circulo_cheio"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_gravity="center"/>

    <View
        android:id="@+id/view"
        android:layout_width="75dip"
        android:layout_height="1dip"
        android:background="@color/sultanColor"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_rowWeight="1"
        android:layout_gravity="center"/>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/circulo"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_column="2"
        android:layout_gravity="center"/>

    <View
        android:id="@+id/view2"
        android:layout_width="75dip"
        android:layout_height="1dip"
        android:background="@color/sultanColor"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_column="3"
        android:layout_gravity="center"/>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/circulo"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_column="4"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:text="finalizado" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_column="2"
        android:layout_row="1"
        android:text="Pagamento" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="4"
        android:layout_row="1"
        android:text="Confirmado" />
    </GridLayout>

    <View
        android:id="@+id/view3"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/colorPrimaryDark" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Escolha onde retirar?"
            android:layout_marginStart="10dp"/>

    <Button
        android:id="@+id/buttonEndereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_gravity="center"
        android:text="Seu endereço"
        android:textSize="28sp" />

    <View
        android:id="@+id/view4"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/buttonFabrica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="Na fábrica"
        android:textSize="28sp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="20dp"
        android:text="Resumo" />

    <View
        android:id="@+id/view5"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/colorPrimaryDark" />

    <GridLayout
        android:id="@+id/ResumeArea"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#C0BEC3"
        android:columnCount="2"
        android:columnOrderPreserved="true"
        android:padding="4dp"
        android:rowCount="6">

        <TextView
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:text="Produto" />

        <TextView
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:text="Desconto" />

        <TextView
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:text="Frete" />

        <TextView
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:text="Total" />

        <TextView
            android:layout_row="4"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:text="@string/lucro" />

        <TextView
            android:id="@+id/qtd"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:text="0,00" />

        <TextView
            android:id="@+id/desc"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:text="0,00" />

        <TextView
            android:id="@+id/frete"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:text="0,00" />

        <TextView
            android:id="@+id/total"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:text="0,00" />

        <TextView
            android:id="@+id/lucro"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:text="0,00" />

        <Button
            android:id="@+id/buttonConfirm"
            android:layout_width="200dp"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/sultanColor"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="@string/continuar"
            android:textColor="@color/sultanGrayColor"/>
        </GridLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:background="@color/sultanColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/buttonRequests"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_marginLeft="20dp"

            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_requests" />

        <ImageButton
            android:id="@+id/buttonCart"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cart" />

        <ImageButton
            android:id="@+id/buttonProfile"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_profile" />
    </LinearLayout>
</RelativeLayout>