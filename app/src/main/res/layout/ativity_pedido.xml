<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/sultanGrayColor">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/finalizar_pedido"
        android:textSize="42sp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/circulo"
        app:layout_constraintEnd_toStartOf="@+id/view"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="110dp" />

    <View
        android:id="@+id/view"
        android:layout_width="100dip"
        android:layout_height="1dip"
        android:background="@color/sultanColor"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="118dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/circulo"
        app:layout_constraintEnd_toStartOf="@+id/view2"
        app:layout_constraintStart_toEndOf="@+id/view"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="110dp" />

    <View
        android:id="@+id/view2"
        android:layout_width="100dip"
        android:layout_height="1dip"
        android:background="@color/sultanColor"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="240dp"
        tools:layout_editor_absoluteY="118dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/circulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toEndOf="@+id/view2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="110dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="finalizado"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.077"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginTop="8dp"
        android:text="Pagamento"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="166dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Confirmado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.917"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView6"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/view3"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/colorPrimaryDark"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="180dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Rua Quatá 300 sala 404"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/view4"
        app:layout_constraintTop_toBottomOf="@+id/view3"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="60dp" />

    <View
        android:id="@+id/view4"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/colorPrimaryDark"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="309dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        android:text="Na fábrica"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="@+id/view5"
        app:layout_constraintTop_toTopOf="@+id/view4"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="140dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Resumo"
        app:layout_constraintBottom_toTopOf="@+id/view5"
        tools:layout_editor_absoluteX="16dp" />

    <View
        android:id="@+id/view5"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/colorPrimaryDark"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="479dp" />

    <GridLayout
        android:id="@+id/ResumeArea"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#C0BEC3"
        android:columnCount="2"
        android:columnOrderPreserved="true"
        android:padding="4dp"
        android:rowCount="6"
        app:layout_constraintBottom_toTopOf="@+id/barra"
        app:layout_constraintEnd_toEndOf="@+id/scrollView2"
        app:layout_constraintStart_toEndOf="@+id/scrollView2"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2">

        <TextView
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:text="Produto" />

        <TextView
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:text="Desconto" />

        <TextView
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:text="Frete" />

        <TextView
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:text="Total" />

        <TextView
            android:layout_row="4"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:text="@string/lucro" />

        <TextView
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:text="0,00" />

        <TextView
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:text="0,00" />

        <TextView
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:text="0,00" />

        <TextView
            android:layout_row="3"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:text="0,00" />

        <TextView
            android:layout_row="4"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:text="0,00" />

        <Button
            android:id="@+id/buttonConfirm"
            android:layout_width="200dp"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/sultanColor"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="@string/continuar"
            android:textColor="@color/sultanGrayColor" />
    </GridLayout>
    <Toolbar
        android:id="@+id/barra"
        android:backgroundTint="#514375"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:gravity="bottom"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="676dp" />

    <Button
        android:id="@+id/buttonRequests"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="#C0BEC3"
        android:text="@string/requests"
        app:layout_constraintStart_toStartOf="@+id/barra"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="680dp" />

    <Button
        android:id="@+id/buttonCart"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/carrinho"
        app:layout_constraintStart_toEndOf="@+id/buttonRequests"
        tools:ignore="MissingConstraints"
        android:textColor="#C0BEC3"
        tools:layout_editor_absoluteY="680dp" />

    <Button
        android:id="@+id/buttonCat"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:textColor="#C0BEC3"
        android:text="@string/Catalogo"
        app:layout_constraintStart_toEndOf="@+id/buttonCart"
        app:layout_constraintTop_toTopOf="@+id/barra"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonProfile"
        android:textColor="#C0BEC3"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/perfilTitle"
        app:layout_constraintEnd_toEndOf="@+id/barra"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/buttonCat"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="680dp" />
</android.support.constraint.ConstraintLayout>